<h2>Suppliers</h2>
<a href="/suppliers/create" class="btn btn-primary mb-3">Add Supplier</a>

<table class="table table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% suppliers.forEach(s => { %>
      <tr>
        <td><%= s.name %></td>
        <td><%= s.address %></td>
        <td><%= s.phone %></td>
        <td>
          <a href="/suppliers/<%= s._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
          <a href="/suppliers/<%= s._id %>/delete" class="btn btn-sm btn-danger" onclick="return confirm('Delete this supplier?')">Delete</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
